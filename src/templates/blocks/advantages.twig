<section class="advantages">
  <div class="container">
    <h2 class="advantages__title">{{ title }}</h2>
    <ul class="advantages__list">
      {% for item in items %}
        <li class="advantages__item advantages__item--{{ item.icon }}">
          {{ item.text }}
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
